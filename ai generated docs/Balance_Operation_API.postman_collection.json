{
	"info": {
		"_postman_id": "balance-operation-api",
		"name": "Balance Operation Service API",
		"description": "Complete API collection for Balance Operation Service endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{api_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost/api/v1",
			"type": "string"
		},
		{
			"key": "api_token",
			"value": "your_sanctum_token_here",
			"type": "string"
		},
		{
			"key": "operation_id",
			"value": "1",
			"type": "string"
		},
		{
			"key": "category_id",
			"value": "1",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Get Operations (DataTables)",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/balance/operations",
					"host": ["{{base_url}}"],
					"path": ["balance", "operations"]
				},
				"description": "Get balance operations formatted for DataTables"
			},
			"response": []
		},
		{
			"name": "Get Filtered Operations",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/balance/operations/filtered?search=transfer&per_page=20",
					"host": ["{{base_url}}"],
					"path": ["balance", "operations", "filtered"],
					"query": [
						{
							"key": "search",
							"value": "transfer",
							"description": "Search term to filter operations"
						},
						{
							"key": "per_page",
							"value": "20",
							"description": "Number of results per page"
						}
					]
				},
				"description": "Get filtered and paginated balance operations with search functionality"
			},
			"response": []
		},
		{
			"name": "Get All Operations",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/balance/operations/all",
					"host": ["{{base_url}}"],
					"path": ["balance", "operations", "all"]
				},
				"description": "Retrieve all balance operations without pagination"
			},
			"response": []
		},
		{
			"name": "Get Operation by ID",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/balance/operations/{{operation_id}}",
					"host": ["{{base_url}}"],
					"path": ["balance", "operations", "{{operation_id}}"]
				},
				"description": "Retrieve a specific balance operation by its ID"
			},
			"response": []
		},
		{
			"name": "Create Operation",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"operation\": \"Transfer\",\n    \"io\": \"I\",\n    \"source\": \"system\",\n    \"mode\": \"automatic\",\n    \"amounts_id\": 1,\n    \"note\": \"Monthly transfer\",\n    \"modify_amount\": true,\n    \"parent_id\": null,\n    \"operation_category_id\": 1,\n    \"ref\": \"REF001\",\n    \"direction\": \"IN\",\n    \"balance_id\": 123,\n    \"parent_operation_id\": null,\n    \"relateble\": 456,\n    \"relateble_model\": \"App\\\\Models\\\\User\",\n    \"relateble_types\": \"user\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/balance/operations",
					"host": ["{{base_url}}"],
					"path": ["balance", "operations"]
				},
				"description": "Create a new balance operation"
			},
			"response": []
		},
		{
			"name": "Update Operation",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"operation\": \"Updated Transfer\",\n    \"note\": \"Updated note\",\n    \"modify_amount\": false\n}"
				},
				"url": {
					"raw": "{{base_url}}/balance/operations/{{operation_id}}",
					"host": ["{{base_url}}"],
					"path": ["balance", "operations", "{{operation_id}}"]
				},
				"description": "Update an existing balance operation"
			},
			"response": []
		},
		{
			"name": "Delete Operation",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/balance/operations/{{operation_id}}",
					"host": ["{{base_url}}"],
					"path": ["balance", "operations", "{{operation_id}}"]
				},
				"description": "Delete a balance operation"
			},
			"response": []
		},
		{
			"name": "Get Category Name",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/balance/operations/category/{{category_id}}/name",
					"host": ["{{base_url}}"],
					"path": ["balance", "operations", "category", "{{category_id}}", "name"]
				},
				"description": "Get the name of an operation category by its ID"
			},
			"response": []
		},
		{
			"name": "Get Categories (DataTables)",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/balance/operations/categories",
					"host": ["{{base_url}}"],
					"path": ["balance", "operations", "categories"]
				},
				"description": "Returns operation categories formatted for DataTables"
			},
			"response": []
		}
	]
}

