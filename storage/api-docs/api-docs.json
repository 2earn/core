{
    "openapi": "3.0.0",
    "info": {
        "title": "2earn API Documentation",
        "description": "API documentation for 2earn",
        "contact": {
            "email": "admin@2earn.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/order/process": {
            "post": {
                "tags": [
                    "Order Processing"
                ],
                "summary": "Process an order simulation and payment",
                "description": "Takes an order ID, runs the simulation and payment, and returns the result.",
                "operationId": "processOrder",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "order_id"
                                ],
                                "properties": {
                                    "order_id": {
                                        "description": "The ID of the order to process.",
                                        "type": "integer",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "order_id": {
                                            "type": "string",
                                            "example": "12345"
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "amount": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 120.5
                                        },
                                        "currency": {
                                            "type": "string",
                                            "example": "USD"
                                        },
                                        "Discount-available": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 20
                                        },
                                        "Lost-Discount": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 5
                                        },
                                        "paid-with-BFS": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 85
                                        },
                                        "paid-with-Cash": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 15
                                        },
                                        "transaction_id": {
                                            "type": "string",
                                            "example": "TXN-999001"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Paiement effectué avec succès"
                                        },
                                        "timestamp": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2025-10-09T12:34:56Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Validation failed"
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Unauthorized. Invalid IP."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "An exception occurred during order processing"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Order Processing",
            "description": "API Endpoints for Order Processing"
        }
    ]
}