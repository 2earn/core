{
    "openapi": "3.0.0",
    "info": {
        "title": "2earn API",
        "description": "API for 2earn",
        "contact": {
            "email": "support@2earn.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/order/process": {
            "post": {
                "tags": [
                    "Order Simulation"
                ],
                "summary": "Process an order simulation",
                "operationId": "api_ext_order_process",
                "requestBody": {
                    "description": "Pass order ID to process",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "order_id"
                                ],
                                "properties": {
                                    "order_id": {
                                        "type": "integer",
                                        "format": "int64",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful simulation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "order_id": {
                                            "type": "string",
                                            "example": "1"
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "amount": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 150.75
                                        },
                                        "currency": {
                                            "type": "string",
                                            "example": "USD"
                                        },
                                        "Discount-available": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 10
                                        },
                                        "Lost-Discount": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 0
                                        },
                                        "paid-with-BFS": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 140.75
                                        },
                                        "paid-with-Cash": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 10
                                        },
                                        "transaction_id": {
                                            "type": "string",
                                            "example": "TXN-1"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Payment successfully completed"
                                        },
                                        "timestamp": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2023-10-17T10:00:00.000000Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request - Order not eligible",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Order status is not eligible for simulation."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Validation failed"
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "An exception occurred during order processing"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Order Simulation",
            "description": "Order Simulation"
        }
    ]
}