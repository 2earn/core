    "name": "Mobile Balance API",
    "description": "Mobile API endpoints for Balance Management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Balances",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/mobile/balances?user_id={{user_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "mobile", "balances"],
          "query": [
            {
              "key": "user_id",
              "value": "{{user_id}}",
              "description": "User ID (required)"
            }
          ]
        },
        "description": "Get stored user balances for a specific user. Requires check.url middleware."
      },
      "response": []
    },
    {
      "name": "Get Cash Balance",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/mobile/cash-balance?user_id={{user_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "mobile", "cash-balance"],
          "query": [
            {
              "key": "user_id",
              "value": "{{user_id}}",
              "description": "User ID (required)"
            }
          ]
        },
        "description": "Get user's cash balance. Requires check.url middleware."
      },
      "response": []
    },
    {
      "name": "Create Cash Balance",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_id\": {{user_id}},\n  \"amount\": 100.00,\n  \"description\": \"Cash balance addition\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/mobile/cash-balance",
          "host": ["{{base_url}}"],
          "path": ["api", "mobile", "cash-balance"]
        },
        "description": "Add cash balance for a user. Requires check.url middleware."
      },
      "response": []
    }
  ]
