{
  "info": {
    "_postman_id": "c2d3e4f5-a6b7-8901-2345-678901234567",
    "name": "Items API v2",
    "description": "Version 2 API endpoints for Item Management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {"name": "Get Items (Paginated)", "request": {"method": "GET", "header": [{"key": "Accept", "value": "application/json"}], "url": {"raw": "{{base_url}}/api/v2/items?search=&per_page=5", "host": ["{{base_url}}"], "path": ["api", "v2", "items"], "query": [{"key": "search", "value": ""}, {"key": "per_page", "value": "5"}]}, "description": "Get paginated items with search"}, "response": []},
    {"name": "Get Items by Platform", "request": {"method": "GET", "header": [{"key": "Accept", "value": "application/json"}], "url": {"raw": "{{base_url}}/api/v2/items/platforms/{{platform_id}}?search=&per_page=15", "host": ["{{base_url}}"], "path": ["api", "v2", "items", "platforms", "{{platform_id}}"]}, "description": "Get items for specific platform"}, "response": []},
    {"name": "Get Items by Deal", "request": {"method": "GET", "header": [{"key": "Accept", "value": "application/json"}], "url": {"raw": "{{base_url}}/api/v2/items/by-deal?deal_id={{deal_id}}", "host": ["{{base_url}}"], "path": ["api", "v2", "items", "by-deal"]}, "description": "Get items by deal ID"}, "response": []},
    {"name": "Get Items for Deal (Full)", "request": {"method": "GET", "header": [{"key": "Accept", "value": "application/json"}], "url": {"raw": "{{base_url}}/api/v2/items/deals/{{deal_id}}", "host": ["{{base_url}}"], "path": ["api", "v2", "items", "deals", "{{deal_id}}"]}, "description": "Get all items for specific deal"}, "response": []},
    {"name": "Get Items with User Purchases", "request": {"method": "GET", "header": [{"key": "Accept", "value": "application/json"}], "url": {"raw": "{{base_url}}/api/v2/items/users/{{user_id}}/purchases", "host": ["{{base_url}}"], "path": ["api", "v2", "items", "users", "{{user_id}}", "purchases"]}, "description": "Get items user has purchased"}, "response": []},
    {"name": "Get Item by ID", "request": {"method": "GET", "header": [{"key": "Accept", "value": "application/json"}], "url": {"raw": "{{base_url}}/api/v2/items/{{item_id}}", "host": ["{{base_url}}"], "path": ["api", "v2", "items", "{{item_id}}"]}, "description": "Get specific item by ID"}, "response": []},
    {"name": "Find Item by Ref and Platform", "request": {"method": "GET", "header": [{"key": "Accept", "value": "application/json"}], "url": {"raw": "{{base_url}}/api/v2/items/by-ref-platform?ref=REF001&platform_id={{platform_id}}", "host": ["{{base_url}}"], "path": ["api", "v2", "items", "by-ref-platform"]}, "description": "Find item by reference and platform"}, "response": []},
    {"name": "Create Item", "request": {"method": "POST", "header": [{"key": "Content-Type", "value": "application/json"}, {"key": "Accept", "value": "application/json"}], "body": {"mode": "raw", "raw": "{\n  \"name\": \"New Item\",\n  \"ref\": \"REF001\",\n  \"platform_id\": {{platform_id}},\n  \"deal_id\": {{deal_id}},\n  \"description\": \"Item description\"\n}"}, "url": {"raw": "{{base_url}}/api/v2/items", "host": ["{{base_url}}"], "path": ["api", "v2", "items"]}, "description": "Create new item"}, "response": []},
    {"name": "Update Item", "request": {"method": "PUT", "header": [{"key": "Content-Type", "value": "application/json"}, {"key": "Accept", "value": "application/json"}], "body": {"mode": "raw", "raw": "{\n  \"name\": \"Updated Item\",\n  \"description\": \"Updated description\"\n}"}, "url": {"raw": "{{base_url}}/api/v2/items/{{item_id}}", "host": ["{{base_url}}"], "path": ["api", "v2", "items", "{{item_id}}"]}, "description": "Update item"}, "response": []},
    {"name": "Delete Item", "request": {"method": "DELETE", "header": [{"key": "Accept", "value": "application/json"}], "url": {"raw": "{{base_url}}/api/v2/items/{{item_id}}", "host": ["{{base_url}}"], "path": ["api", "v2", "items", "{{item_id}}"]}, "description": "Delete item"}, "response": []},
    {"name": "Bulk Update Deal", "request": {"method": "POST", "header": [{"key": "Content-Type", "value": "application/json"}, {"key": "Accept", "value": "application/json"}], "body": {"mode": "raw", "raw": "{\n  \"item_ids\": [1, 2, 3],\n  \"deal_id\": {{deal_id}}\n}"}, "url": {"raw": "{{base_url}}/api/v2/items/bulk-update-deal", "host": ["{{base_url}}"], "path": ["api", "v2", "items", "bulk-update-deal"]}, "description": "Bulk assign items to deal"}, "response": []},
    {"name": "Bulk Remove from Deal", "request": {"method": "POST", "header": [{"key": "Content-Type", "value": "application/json"}, {"key": "Accept", "value": "application/json"}], "body": {"mode": "raw", "raw": "{\n  \"item_ids\": [1, 2, 3],\n  \"deal_id\": {{deal_id}}\n}"}, "url": {"raw": "{{base_url}}/api/v2/items/bulk-remove-deal", "host": ["{{base_url}}"], "path": ["api", "v2", "items", "bulk-remove-deal"]}, "description": "Bulk remove items from deal"}, "response": []}
  ],
  "variable": [
    {"key": "base_url", "value": "http://localhost:8000"},
    {"key": "item_id", "value": "1"},
    {"key": "platform_id", "value": "1"},
    {"key": "deal_id", "value": "1"},
    {"key": "user_id", "value": "1"}
  ]
}

