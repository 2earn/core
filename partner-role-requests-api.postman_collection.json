{
  "info": {
    "name": "Partner Role Requests API",
    "description": "Collection for testing Partner Role Request endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Partner Role Requests",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/partner/role-requests?partner_id=1&status=all&page=1&limit=15",
          "host": ["{{base_url}}"],
          "path": ["api", "partner", "role-requests"],
          "query": [
            {
              "key": "partner_id",
              "value": "1",
              "description": "Partner ID (required)"
            },
            {
              "key": "status",
              "value": "all",
              "description": "Filter by status: all, pending, approved, rejected, cancelled"
            },
            {
              "key": "user_id",
              "value": "",
              "description": "Filter by user ID (optional)",
              "disabled": true
            },
            {
              "key": "page",
              "value": "1",
              "description": "Page number"
            },
            {
              "key": "limit",
              "value": "15",
              "description": "Items per page (max: 100)"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Partner Role Request by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/partner/role-requests/1?partner_id=1",
          "host": ["{{base_url}}"],
          "path": ["api", "partner", "role-requests", "1"],
          "query": [
            {
              "key": "partner_id",
              "value": "1",
              "description": "Partner ID (required)"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Create Partner Role Request",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"partner_id\": 1,\n  \"user_id\": 5,\n  \"role_name\": \"manager\",\n  \"reason\": \"Need a manager for the sales department\",\n  \"requested_by\": 2\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/partner/role-requests",
          "host": ["{{base_url}}"],
          "path": ["api", "partner", "role-requests"]
        }
      },
      "response": []
    },
    {
      "name": "Cancel Partner Role Request",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"cancelled_by\": 2,\n  \"cancelled_reason\": \"Request is no longer needed\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/partner/role-requests/1/cancel",
          "host": ["{{base_url}}"],
          "path": ["api", "partner", "role-requests", "1", "cancel"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost",
      "type": "string"
    }
  ]
}
